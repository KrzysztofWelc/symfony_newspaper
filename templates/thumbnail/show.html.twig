{% extends 'base.html.twig' %}

{% block title %}
    {{ article.title }}
{% endblock %}

{% block body %}
    {% if article.fileName is defined and article.fileName|length %}
        <p>obecna miniaturka</p>
        <img class="nav-profile-img" src="{{ asset('uploads/avatars/'~ article.fileName) }}">
        <a href={{ url('thumbnail_edit', {'id': article.id}) }}>zmień</a>
        <a href={{ url('thumbnail_delete', {'id': article.id}) }}>usuń</a>
        <a href={{ url('article_index') }}>pomiń</a>
    {% else %}
        <p>dodać miniaturkę?</p>
        <a href={{ url('thumbnail_add', {'id': article.id}) }}>dodaj</a>
        <a href={{ url('article_index') }}>pomiń</a>
    {% endif %}
{% endblock %}
