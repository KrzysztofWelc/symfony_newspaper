{% extends 'base.html.twig' %}

{% block title %}
    {{ 'edit_thumbnail'|trans }}
{% endblock %}

{% block body %}
    <div class="card mt-5">
        <div class="card-body">
            <div class="card-title">{{ 'edit_thumbnail'|trans }}</div>

            {{ form_start(form, { method: 'POST', action: url('thumbnail_edit', {"id": id}) }) }}
            {{ form_widget(form) }}
            <div class="form-group row float-sm-right">
                <input type="submit" value="{{ 'edit_thumbnail'|trans }}" class="btn btn-primary" />
            </div>
            <div class="form-group row float-sm-left">
                <a href="{{ url('article_index') }}" class="btn btn-link">
                    {{ 'give_up'|trans }}
                </a>
            </div>
            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}