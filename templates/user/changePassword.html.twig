{% extends 'base.html.twig' %}

{% block title %}
    {{ 'password_change'|trans }}
{% endblock %}

{% block body %}
    <div class="card mt-5">
        <div class="card-body">
            <div class="card-title">{{ 'password_change'|trans }}</div>

            {{ form_start(form, { method: 'PUT', action: url('user_password_change', {'id': id}) }) }}
            {{ form_widget(form) }}
            <div class="form-group row float-sm-right">
                <input type="submit" value="{{ 'password_change'|trans }}" class="btn btn-primary" />
            </div>
            <div class="form-group row float-sm-left">
                <a href="{{ url('user_profile', {"id": app.user.id}) }}" class="btn btn-link">
                    {{ 'back'|trans }}
                </a>
            </div>
            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}