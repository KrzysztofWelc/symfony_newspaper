{% extends 'base.html.twig' %}

{% block title %}#{{ tag.code }}{% endblock %}

{% block body %}
    <h1 class="mb-3">tag: {{ tag.name }}</h1>
    <a href={{ url('tag_edit', {'id': tag.id}) }}>edit</a>

    {% if tag.articles is defined and tag.articles|length %}
        {% for article in tag.articles %}
            <li><a href={{ url('article_show', {"id": article.id})  }}>{{ article.title }}</a></li>
        {% endfor %}
    {% endif %}
{% endblock %}
