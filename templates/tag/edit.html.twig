{% extends 'base.html.twig' %}

{% block title %}
    {{ 'tag_edit'|trans }}: {{ tag.name }}
{% endblock %}

{% block body %}
    <div class="card mt-5">
        <div class="card-body">
            <div class="card-title">{{ 'tag_edit'|trans }}: {{ tag.name }}</div>

            {{ form_start(form, { method: 'PUT', action: url('tag_edit', {'id': tag.id}) }) }}
            {{ form_widget(form) }}
            <div class="form-group row float-sm-right">
                <input type="submit" value="{{ 'change'|trans }}" class="btn btn-primary" />
            </div>
            <div class="form-group row float-sm-left">
                <a href="{{ url('category_index') }}" class="btn btn-link">
                    {{ 'back'|trans }}
                </a>
            </div>
            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}