{% extends 'base.html.twig' %}

{% block title %}{{ 'categories'|trans }}{% endblock %}

{% block body %}
    <h2>{{ 'categories'|trans }}</h2>
    {% if categories is defined and categories|length %}
        <ul>
            {% for category in categories %}
                <li><a href={{ url('category_show', {"name": category.name}) }}>{{ category.name }}</a></li>
            {% endfor %}
        </ul>

    {% endif %}
{% endblock %}
